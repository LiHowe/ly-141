<controls:BaseSettingsControl x:Class="MainApp.Views.Settings.SystemSettingsControl"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:vm="clr-namespace:MainApp.ViewModels.Settings"
                              xmlns:converters="clr-namespace:Core.Converters;assembly=Core"
                              xmlns:hc="https://handyorg.github.io/handycontrol"
                              xmlns:controls="clr-namespace:UI.Controls;assembly=UI"
                              d:DataContext="{d:DesignInstance vm:SystemSettingsViewModel}"
                              Background="Transparent"
                              mc:Ignorable="d"
                              d:DesignHeight="800" d:DesignWidth="700">
    <controls:BaseSettingsControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </controls:BaseSettingsControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <GroupBox Header="启动设置" Margin="0,0,0,15"  Style="{StaticResource GroupBoxTab}">
                <StackPanel Margin="10">
                    <!-- 开机自动启动 -->
                    <CheckBox Content="开机自动启动"
                              IsChecked="{Binding IsUseAutoStart}"
                              Margin="0,0,0,10" />

                    <!-- 最小化到系统托盘 -->
                    <CheckBox Content="最小化到系统托盘"
                              IsChecked="{Binding IsMinimizeToTray}"
                              Margin="0,0,0,10" />
                    <CheckBox Content="默认全屏"
                              IsChecked="{Binding IsDefaultFullScreen}"
                              Margin="0,0,0,10" />
                    <CheckBox Content="全屏隐藏任务栏"
                              IsChecked="{Binding IsHideTaskbar}"
                              Margin="0,0,0,10" />
                    <CheckBox Content="启用磁盘监控"
                              IsChecked="{Binding IsUseDiskWatcher}"
                              Margin="0,0,0,10" />
                </StackPanel>
            </GroupBox>
            <!-- 日志设置 -->
            <GroupBox Header="日志设置" Margin="0,0,0,15"  Style="{StaticResource GroupBoxTab}">
                <StackPanel Margin="10">
                    <!-- 日志级别 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="日志级别:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <hc:ComboBox ItemsSource="{Binding AvailableLogLevels}"
                                     SelectedItem="{Binding LogLevel}" MinWidth="200" />
                    </StackPanel>

                    <!-- 最大日志文件数 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="最大日志文件数:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <hc:NumericUpDown Value="{Binding MaxLogFiles}"
                                          Minimum="1" Maximum="365" MinWidth="200" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 日志设置 -->
            <GroupBox Header="磁盘监控设置" Margin="0,0,0,15" Style="{StaticResource GroupBoxTab}"
                      Visibility="{Binding IsUseDiskWatcher, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="磁盘报警阈值(%):" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <hc:NumericUpDown Value="{Binding DiskRemainPct}"
                                          Minimum="1" Maximum="100" MinWidth="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="监控磁盘:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <hc:ComboBox ItemsSource="{Binding AvailableDisks}"
                                     SelectedItem="{Binding WatchedDisk}" MinWidth="200" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 管理员设置 -->
            <GroupBox Header="开发设置" Margin="0,0,0,15"  Style="{StaticResource GroupBoxTab}"
                      Visibility="{Binding IsShowDevPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="系统标题:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <TextBox Text="{Binding SystemName}" MinWidth="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="系统副标题:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <TextBox Text="{Binding SystemSubName}" MinWidth="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="系统版本:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120" />
                        <TextBox Text="{Binding SystemVersion}" MinWidth="200" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

    </ScrollViewer>
</controls:BaseSettingsControl>