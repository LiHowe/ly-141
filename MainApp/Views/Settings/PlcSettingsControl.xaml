<controls:BaseSettingsControl x:Class="MainApp.Views.Settings.PlcSettingsControl"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:MainApp.Controls"
                              xmlns:vm="clr-namespace:MainApp.ViewModels.Settings"
                              xmlns:controls="clr-namespace:UI.Controls;assembly=UI"
                              xmlns:controlsvm="clr-namespace:UI.ViewModels;assembly=UI"
                              d:DataContext="{d:DesignInstance vm:PlcSettingsViewModel}"
                              mc:Ignorable="d"
                              Background="Transparent"
                              d:DesignHeight="800" d:DesignWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ 新增PLC" Command="{Binding AddPlcCommand}" Margin="0,0,10,0" />
            <Button Content="🔗 测试全部连接" Command="{Binding TestAllConnectionCommand}" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Configs}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type controlsvm:S7PlcViewModel}">
                        <controls:S7PlcControl Margin="0,0,10,10" DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</controls:BaseSettingsControl>