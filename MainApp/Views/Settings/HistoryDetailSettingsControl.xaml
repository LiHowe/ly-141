<UserControl x:Class="MainApp.Views.Settings.HistoryDetailSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:settings="clr-namespace:MainApp.Views.Settings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance settings:HistoryDetailSettingsViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧：历史详情列表 -->
        <hc:Card Grid.Column="0" BorderThickness="1" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <!-- <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="4,4,0,0" Padding="10"> -->
                <!--     <TextBlock Text="📋 历史详情配置" FontWeight="Bold" Foreground="White" /> -->
                <!-- </Border> -->

                <!-- 配置列表 -->
                <ListBox Grid.Row="1" x:Name="ConfigListBox"
                         ItemsSource="{Binding Configs}"
                         SelectedItem="{Binding SelectedConfig}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <!-- 关键：让 ListBoxItem 的内容横向拉伸 -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" Margin="2"
                                    Background="Transparent"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" FontSize="14" />
                                        <TextBlock Text="{Binding Model}" FontSize="12"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,2,0,0" />
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Content="&#xe69e;"
                                            FontFamily="{StaticResource Icon}"
                                            FontSize="12"
                                            Width="24" Height="24"
                                            Padding="2"
                                            Style="{StaticResource ButtonDanger}"
                                            Command="{Binding DataContext.DeleteConfigCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="删除配置" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- 底部按钮 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="➕ 添加配置"
                            Command="{Binding AddConfigCommand}"
                            Style="{StaticResource ButtonPrimary}"
                            Margin="0,0,10,0" />
                    <!-- <Button Content="💾 保存"  -->
                    <!--         Command="{Binding SaveCommand}" -->
                    <!--         Style="{StaticResource ButtonSuccess}"/> -->
                </StackPanel>
            </Grid>
        </hc:Card>

        <!-- 分隔线 -->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}" />

        <!-- 右侧：配置详情 -->
        <hc:Card Grid.Column="2" BorderThickness="0" Margin="5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <!-- <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="4,4,0,0" Padding="10"> -->
                <!--     <TextBlock Text="⚙️ 配置详情" FontWeight="Bold" Foreground="White" /> -->
                <!-- </Border> -->

                <!-- 配置详情内容 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0" >
                    <StackPanel IsEnabled="{Binding HasSelectedConfig}" Background="Transparent" >
                        <!-- 基本信息 -->
                        <GroupBox Header="基本信息" Margin="0,0,0,15" Style="{StaticResource GroupBoxTab}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="标题:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding SelectedConfig.Title, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,10" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="模型类:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          ItemsSource="{Binding AvailableModels}"
                                          SelectedItem="{Binding SelectedConfig.Model}"
                                          SelectionChanged="OnModelSelectionChanged"
                                          Margin="0,0,0,10" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="排序字段:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding SelectedConfig.OrderBy, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,10" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="排序方式:" VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <ComboBox Grid.Row="3" Grid.Column="1"
                                          SelectedItem="{Binding SelectedConfig.OrderByType}"
                                          ItemsSource="{Binding AvailableOrderBys}" />
                                <!-- 显示选项 -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                                            Margin="0, 10">
                                    <CheckBox Content="显示图表" IsChecked="{Binding SelectedConfig.ShowPlot}"
                                              Margin="0,0,10,0" />
                                    <CheckBox Content="显示图片" IsChecked="{Binding SelectedConfig.ShowImage}" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- 列配置 -->
                        <GroupBox Header="显示/隐藏列配置" Margin="0,0,0,15" Style="{StaticResource GroupBoxTab}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="操作类型:" VerticalAlignment="Center" Margin="0,0,10,0" />
                                    <!-- 切换按钮 -->
                                    <ToggleButton x:Name="ColumnModeToggle"
                                                  Content="显示列"
                                                  Style="{StaticResource ToggleButtonSwitch}"
                                                  IsChecked="{Binding IsShowSpecificColumns}" />
                                </StackPanel>


                                <!-- 说明文字 -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding ColumnModeDescription}"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,0,0,10" />

                                <!-- 列选择 -->
                                <ListBox Grid.Row="2"
                                         ItemsSource="{Binding ModelColumns}"
                                         Height="200"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayName}"
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="5" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>

                        <!-- 图表配置 -->
                        <GroupBox Header="图表配置" Margin="0,0,0,15"  Style="{StaticResource GroupBoxTab}"
                                  Visibility="{Binding SelectedConfig.ShowPlot, Converter={StaticResource Boolean2VisibilityConverter}}">
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- 左侧：图表列表 -->
                                <Border Grid.Column="0" BorderThickness="0" BorderBrush="{DynamicResource BorderBrush}"
                                        Margin="0,0,5,0"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- 标题栏 -->
                                        <!-- <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" -->
                                        <!--         CornerRadius="4,4,0,0" Padding="10,8"> -->
                                        <!--     <TextBlock Text="📊 图表列表" FontWeight="Bold" Foreground="White" /> -->
                                        <!-- </Border> -->

                                        <!-- 图表列表 -->
                                        <ListBox Grid.Row="1"
                                                 ItemsSource="{Binding SelectedConfig.Plots}"
                                                 SelectedItem="{Binding SelectedPlot}"
                                                 BorderThickness="0"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 >
                                            <!-- 关键：让 ListBoxItem 的内容横向拉伸 -->
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="8,6" Margin="2"
                                                            Background="Transparent"
                                                            BorderBrush="{DynamicResource BorderBrush}"
                                                            BorderThickness="0,0,0,1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"
                                                                           FontSize="13" />
                                                                <TextBlock Text="{Binding XLabel}" FontSize="11"
                                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                                           Margin="0,2,0,0" />
                                                            </StackPanel>

                                                            <Button Grid.Column="1"
                                                                    FontFamily="{StaticResource Icon}"
                                                                    Content="&#xe69e;"
                                                                    Padding="0"
                                                                    Width="20" Height="20"
                                                                    FontSize="10"
                                                                    Style="{StaticResource ButtonDanger}"
                                                                    Command="{Binding DataContext.DeletePlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="删除图表" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <!-- 底部按钮 -->
                                        <Button Grid.Row="2" Content="➕ 添加图表"
                                                Command="{Binding AddPlotCommand}"
                                                Style="{StaticResource ButtonPrimary}"
                                                Height="32" Margin="10" />
                                    </Grid>
                                </Border>

                                <!-- 右侧：图表详情配置 -->
                                <Border Grid.Column="1" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- 标题栏 -->
                                        <!-- <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" -->
                                        <!--         CornerRadius="4,4,0,0" Padding="10,8"> -->
                                        <!--     <TextBlock Text="⚙️ 图表详情" FontWeight="Bold" Foreground="White" /> -->
                                        <!-- </Border> -->

                                        <!-- 配置详情内容 -->
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                                            <StackPanel IsEnabled="{Binding HasSelectedPlot}">
                                                <!-- 基本信息 -->
                                                <Grid Margin="10">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="80" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="标题:"
                                                                   VerticalAlignment="Center" Margin="0,0,10,10" />
                                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                                 Text="{Binding SelectedPlot.Title, UpdateSourceTrigger=PropertyChanged}"
                                                                 Margin="0,0,0,10" />

                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="X轴标签:"
                                                                   VerticalAlignment="Center" Margin="0,0,10,10" />
                                                        <TextBox Grid.Row="1" Grid.Column="1"
                                                                 Text="{Binding SelectedPlot.XLabel, UpdateSourceTrigger=PropertyChanged}"
                                                                 Margin="0,0,0,10" />

                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Y轴标签:"
                                                                   VerticalAlignment="Center" Margin="0,0,10,10" />
                                                        <TextBox Grid.Row="2" Grid.Column="1"
                                                                 Text="{Binding SelectedPlot.YLabel, UpdateSourceTrigger=PropertyChanged}"
                                                                 Margin="0,0,0,10" />

                                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="分组列:"
                                                                   VerticalAlignment="Center" Margin="0,0,10,0" />
                                                        <ComboBox Grid.Row="3" Grid.Column="1"
                                                                  ItemsSource="{Binding ModelColumnNames}"
                                                                  SelectedItem="{Binding SelectedPlot.GroupColumnName}" />
                                                    </Grid>

                                                <!-- 数据列选择 -->
                                                <GroupBox Header="数据列选择" Style="{StaticResource GroupBoxOriginal}">
                                                    <ListBox ItemsSource="{Binding PlotColumns}"
                                                             Height="150"
                                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                             Margin="10">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <CheckBox Content="{Binding DisplayName}"
                                                                          IsChecked="{Binding IsSelected}"
                                                                          Margin="5" />
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </GroupBox>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>
                        </GroupBox>

                        <!-- 图片配置 -->
                        <GroupBox Header="图片配置"
                                  Style="{StaticResource GroupBoxTab}"
                                  Visibility="{Binding SelectedConfig.ShowImage, Converter={StaticResource Boolean2VisibilityConverter}}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="文件夹路径:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding SelectedConfig.Image.FolderPath, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,5,10" />
                                <Button Grid.Row="0" Grid.Column="2" Content="&#xebdf;"
                                        FontFamily="{StaticResource Icon}" Padding="2"
                                        Command="{Binding BrowseFolderCommand}"
                                        Width="30" Height="25" Margin="0,0,0,10" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="文件名列:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                          ItemsSource="{Binding ModelColumnNames}"
                                          SelectedItem="{Binding SelectedConfig.Image.Column}"
                                          Margin="0,0,0,10" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="固定文件名:" VerticalAlignment="Center"
                                           Margin="0,0,10,10" />
                                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                         Text="{Binding SelectedConfig.Image.FileName, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,10" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="文件扩展名:" VerticalAlignment="Center"
                                           Margin="0,0,10,0" />
                                <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                          SelectedItem="{Binding SelectedConfig.Image.Extension}">
                                    <ComboBoxItem Content="jpg" />
                                    <ComboBoxItem Content="jpeg" />
                                    <ComboBoxItem Content="png" />
                                    <ComboBoxItem Content="bmp" />
                                    <ComboBoxItem Content="gif" />
                                    <ComboBoxItem Content="tiff" />
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </hc:Card>
    </Grid>
</UserControl>