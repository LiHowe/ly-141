<Window x:Class="MainApp.Windows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="WelcomeWindow" Height="440" Width="700">
    <Window.Resources>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#000E2E" Offset="0" />
            <GradientStop Color="#0C3371" Offset="0.3" />
            <GradientStop Color="#002155" Offset="1" />
        </LinearGradientBrush>
        <!-- 文本样式 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="MiSans" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="MiSans" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFE5E7EB" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="MiSans" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#FFD1D5DB" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
    </Window.Resources>


    <Border CornerRadius="12"
            Background="{StaticResource BackgroundGradient}"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#1A2A44"
                              BlurRadius="15"
                              ShadowDepth="3"
                              Opacity="0.4" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- 主内容区域 -->
            <Grid Grid.Row="0" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo区域 -->
                <Grid Grid.Row="0" HorizontalAlignment="Center">
                    <Image Source="/Resources/Images/logo_white_full.png" Width="80" Height="80" />
                </Grid>

                <!-- 标题 -->
                <TextBlock Grid.Row="2"
                           Text="维美产线采集与监测系统"
                           Name="SystemTitleTextBlock"
                           Style="{StaticResource TitleTextStyle}" />

                <!-- 副标题 -->
                <TextBlock Grid.Row="4"
                           Name="SystemSubtitleTextBlock"
                           Text="Product Line Information Collection and Moniting System"
                           Style="{StaticResource SubtitleTextStyle}" />

                <!-- 版本信息 -->
                <StackPanel Grid.Row="6"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="版本 " Style="{StaticResource StatusTextStyle}" />
                    <TextBlock x:Name="SystemVersionTextBlock" Text="1.0.0"
                               Style="{StaticResource StatusTextStyle}" FontWeight="SemiBold" />
                    <TextBlock Text=" | " Style="{StaticResource StatusTextStyle}" Margin="10,5,10,0" />
                    <TextBlock Text="© 2025 沈阳维美智能工业科技有限公司" Style="{StaticResource StatusTextStyle}" />
                </StackPanel>
            </Grid>

            <!-- 加载状态 -->
            <StackPanel Grid.Row="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="20, 0"
                        Orientation="Horizontal">
                <TextBlock x:Name="LoadingStatusTextBlock"
                           Text="正在加载..."
                           HorizontalAlignment="Left"
                           Style="{StaticResource StatusTextStyle}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- 进度条 -->
            <ProgressBar x:Name="LoadingProgressBar"
                         Grid.Row="1"
                         Height="10"
                         Margin="20,0"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Foreground="#DDE4FF"
                         Background="#3b5998"
                         BorderBrush="#1A2A44"
                         BorderThickness="1">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <Grid>
                                            <Rectangle x:Name="PART_Track" />
                                            <Rectangle x:Name="PART_Indicator"
                                                       HorizontalAlignment="Left"
                                                       Fill="{TemplateBinding Foreground}"
                                                       RadiusX="5" RadiusY="5" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </Grid>
    </Border>
</Window>