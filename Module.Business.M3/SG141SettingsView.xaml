<UserControl x:Class="Module.Business.SG141.SG141SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Module.Business.SG141"
             xmlns:controls="clr-namespace:Module.Business.SG141.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0" >
            <StackPanel Margin="0">
                <!-- 基础设置 -->
                <StackPanel Orientation="Horizontal" Margin="10,0,10,10" >
                    <TextBlock Foreground="{StaticResource PrimaryTextBrush}" Width="130" VerticalAlignment="Center" Margin="0,0,10,0" Text="每日计划产量"/>
                    <hc:NumericUpDown Value="{Binding DailyPlanCount}" MinWidth="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,10" >
                    <TextBlock Foreground="{StaticResource PrimaryTextBrush}" Width="130" VerticalAlignment="Center" Margin="0,0,10,0" Text="线速阈值"/>
                    <hc:NumericUpDown Value="{Binding PlanSpeed}" MinWidth="120"/>
                </StackPanel>
                
                <!-- 设备管理 -->
                <DataGrid 
  ItemsSource="{Binding Devices}" 
  AutoGenerateColumns="False"
  CanUserAddRows="False"
  Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="设备名称" 
Binding="{Binding DeviceName}" 
Width="*"/>
                        <DataGridCheckBoxColumn Header="启用状态" 
    Binding="{Binding IsActive}" 
    Width="100"/>
                        <DataGridTextColumn Header="目标PLC" 
Binding="{Binding TargetPlc}" 
Width="*"/>
                        <DataGridTextColumn Header="PLC状态节点" 
Binding="{Binding PlcNode}" 
Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
