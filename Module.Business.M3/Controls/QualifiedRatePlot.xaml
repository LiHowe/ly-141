<UserControl x:Class="Module.Business.SG141.Controls.QualifiedRatePlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Module.Business.SG141.Controls"
             xmlns:loc="clr-namespace:Core.Localization;assembly=Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 引用HandyControl集成主题资源 -->
                <ResourceDictionary Source="pack://application:,,,/UI;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border CornerRadius="8" Margin="5" Padding="10,0,10,10" Background="{StaticResource SecondaryRegionBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource IconText}" Text="&#xe650;" Margin="0,0,5,0" FontSize="16"/>
                    <TextBlock Text="{loc:Lang Block_DailyPassRate}" Style="{StaticResource TextBlockDefaultBold}" FontSize="14"></TextBlock>
                </StackPanel>
            </Border>
            <!-- 生产趋势折线图  -->
            <local:GaugePlot Grid.Row="1" CurrentValue="0" MaxValue="100" />
        </Grid>
    </Border>
</UserControl>
