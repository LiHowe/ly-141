<UserControl x:Class="Module.Business.SG141.Controls.DeviceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Module.Business.SG141.Controls"
             mc:Ignorable="d" 
             Height="40"
             d:DesignHeight="40" d:DesignWidth="400">
    <UserControl.Resources>
        <!-- Storyboard for Fault State Blinking -->
        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="1.0" To="0.3" Duration="0:0:1.5"
                            AutoReverse="True" />
        </Storyboard>
        <Style x:Key="StatusBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ThirdlyRegionBrush}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DeviceStatus}" Value="Running">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DeviceStatus}" Value="Standby">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DeviceStatus}" Value="Fault">
                    <Setter Property="Background" Value="{StaticResource DangerBrush}" />
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource BlinkAnimation}" />
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="BlinkAnimation" />
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Status Text Border -->
        <Style x:Key="IconStyles" TargetType="TextBlock" BasedOn="{StaticResource IconText}">
            <Style.Triggers>
                <!--<DataTrigger Binding="{Binding DeviceStatus}" Value="Running">
                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DeviceStatus}" Value="Standby">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                </DataTrigger>-->
                <DataTrigger Binding="{Binding DeviceStatus}" Value="Fault">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                    <Setter Property="Text" Value="\ue651"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource StatusBorderStyle}" CornerRadius="8" Padding="5,0,10,0" Margin="0,4">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <!-- Icon -->
            <TextBlock Style="{StaticResource IconStyles}" Text="&#xeb64;" FontSize="16" />
            <!-- Device Name -->
            <TextBlock Grid.Column="1"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontWeight="Black"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Text="{Binding DeviceName, FallbackValue='未知设备'}" />
            <!-- Status Text -->
            <Border Grid.Column="2"
                    Background="{StaticResource DarkOpacityBrush}"
                    CornerRadius="10"
                    Height="20">
                <TextBlock Text="{Binding StatusText, FallbackValue='未知状态'}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>
        </Grid>
    </Border>
</UserControl>
