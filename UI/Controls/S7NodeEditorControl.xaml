<UserControl x:Class="UI.Controls.S7NodeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:Core.Localization;assembly=Core"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource RegionBrush}" CornerRadius="0,0,8,8" Padding="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="10" BlurRadius="15" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 操作栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <Button Content="{loc:Lang Add}" Command="{Binding AddNodeCommand}" Padding="8,4" Margin="0,0,8,0" />
                <Button Content="{loc:Lang Delete}" Command="{Binding DeleteNodeCommand}" Padding="8,4" Margin="8,0,8,0" />
                <Button Content="{loc:Lang SetDB}" Command="{Binding SetAllDbCommand}" Padding="8,4" Margin="8,0,8,0" />
                <Button Content="{loc:Lang Validate}" Command="{Binding ValidateNodesCommand}" Padding="8,4" Margin="8,0,8,0" />
                <Button Content="{loc:Lang ExcelImport}" Command="{Binding ImportExcelCommand}" Padding="8,4" Margin="8,0,8,0" />
                <Button Content="{loc:Lang ExcelExport}" Command="{Binding ExportExcelCommand}" Padding="8,4" Margin="8,0,8,0" />
                <Button Content="{loc:Lang Test}" Command="{Binding TestCommand}" Padding="8,4" Margin="8,0,8,0" />
                <!-- <Button Content="保存配置" Command="{Binding SaveCommand}" Style="{StaticResource ButtonPrimary}" Padding="8,4" Margin="8,0,8,0"/> -->
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding Nodes}" AutoGenerateColumns="False" Margin="0,0,0,8"
                      x:Name="NodesDataGrid" SelectedItem="{Binding SelectedNode}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{loc:Lang Title}" Binding="{Binding Title}" Width="100" />
                    <DataGridTextColumn Header="DB" Binding="{Binding Db}" Width="60" />
                    <DataGridTextColumn Header="{loc:Lang Offset}" Binding="{Binding Offset}" Width="80" />
                    <DataGridTextColumn Header="{loc:Lang Type}" Binding="{Binding Type}" Width="80" />
                    <DataGridTextColumn Header="{loc:Lang Bitlength}" Binding="{Binding BitLength}" Width="60" />
                    <DataGridTextColumn Header="{loc:Lang Description}" Binding="{Binding Description}" Width="120" />
                    <DataGridCheckBoxColumn Header="{loc:Lang Enable}" Binding="{Binding Enabled}" Width="60" />
                    <DataGridCheckBoxColumn Header="{loc:Lang Feedback}" Binding="{Binding NeedFeedback}" Width="80" />
                    <DataGridTextColumn Header="{loc:Lang FeedbackNode}" Binding="{Binding FeedbackNodeKey}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- 状态栏 -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBorderBrush}" CornerRadius="4" Padding="8">
                <TextBlock Text="{Binding NodeCount, StringFormat=节点数量: {0}}" Foreground="{StaticResource PrimaryTextBrush}" />
            </Border>
        </Grid>
    </Border>
</UserControl>