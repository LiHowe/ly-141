<UserControl x:Class="UI.Controls.S7PlcControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             xmlns:loc="clr-namespace:Core.Localization;assembly=Core"
             xmlns:viewModels="clr-namespace:UI.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:S7PlcViewModel}"
             mc:Ignorable="d"
             Width="240" Height="320"
             d:DesignHeight="320" d:DesignWidth="240">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 引用HandyControl集成主题资源 -->
                <ResourceDictionary Source="pack://application:,,,/UI;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource SecondaryRegionBrush}"
            CornerRadius="16"
            Padding="12">
        <Border.Effect>
            <DropShadowEffect Color="{StaticResource DarkOpacityColor}"
                              Opacity="0.1"
                              ShadowDepth="10"
                              BlurRadius="15" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Device Icon and Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Resources/Images/device_block.png" Width="40" Height="40" Margin="0,0,16,0" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding DeviceName}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   d:Text="S7-1200" />
                        <TextBlock Text="{Binding DeviceType}" Foreground="{StaticResource PrimaryTextBrush}" d:Text="Plc设备" />
                    </StackPanel>
                </StackPanel>

                <!-- Toggle Switch -->
                <ToggleButton Grid.Column="2"
                              IsChecked="{Binding IsEnabled}"
                              Style="{StaticResource ToggleButtonSwitch}"
                              Height="24" />
            </Grid>

            <!-- Device Information Section -->
            <StackPanel Grid.Row="2" Margin="0,12,0,0">
                <!-- Device ID -->
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{loc:Lang DeviceTag}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Grid.Column="1" Text="{Binding DeviceId}" d:Text="S7" Foreground="{StaticResource PrimaryTextBrush}" FontFamily="Consolas" />
                </Grid>

                <!-- Device Type -->
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{loc:Lang DeviceType}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Grid.Column="1" Text="{Binding DeviceTypeName}" Foreground="{StaticResource PrimaryTextBrush}" d:Text="S7-1500" FontFamily="Consolas" />
                </Grid>

                <!-- IP Address -->
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="IP" Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Grid.Column="1" Text="{Binding IpAddress}" d:Text="192.168.31.100" Foreground="{StaticResource PrimaryTextBrush}" FontFamily="Consolas" />
                </Grid>

                <!-- Rack Number -->
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{loc:Lang Rack}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Grid.Column="1" Text="{Binding RackNumber}" d:Text="0" Foreground="{StaticResource PrimaryTextBrush}" FontFamily="Consolas" />
                </Grid>

                <!-- Slot Number -->
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{loc:Lang Slot}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Grid.Column="1" Text="{Binding SlotNumber}" d:Text="1" Foreground="{StaticResource PrimaryTextBrush}" FontFamily="Consolas" />
                </Grid>
            </StackPanel>

            <!-- Control Section -->
            <Border Grid.Row="4"
                    VerticalAlignment="Top"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource BorderBrush}">
                <StackPanel>
                    <!-- Status and Action Buttons -->
                    <Grid Height="36" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Status -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- <Ellipse Width="8" Height="8"  -->
                            <!--          Fill="{Binding StatusColor}"  -->
                            <!--          d:Fill="#00a001" -->
                            <!--          Margin="0,0,8,0"/> -->
                            <TextBlock Text="&#xe623;" Style="{StaticResource IconText}"
                                       Foreground="{Binding StatusColor}"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="{Binding Status}" d:Text="运行中" Foreground="{StaticResource PrimaryTextBrush}" />
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button 
                                    Command="{Binding TestConnectionCommand}"
                                    Foreground="White"
                                    Padding="8,4"
                                    Margin="0,0,5,0"
                                    BorderThickness="0"
                                    ToolTip="{loc:Lang Test}"
                                    Width="30"
                                    Style="{StaticResource ButtonPrimary}">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="11" Height="14"
                                                   Source="/Resources/Images/test.png" />
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button Content="&#xe63f;"
                                    Command="{Binding EditDeviceCommand}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    FontFamily="{StaticResource Icon}"
                                    Width="30"
                                    ToolTip="{loc:Lang Edit}"
                                    Margin="0,0,5,0"
                                    Padding="8,4" />

                            <Button Content="&#xe69e;"
                                    FontFamily="{StaticResource Icon}"
                                    Command="{Binding RemoveDeviceCommand}"
                                    Foreground="{StaticResource DangerBrush}"
                                    Width="30"
                                    ToolTip="{loc:Lang Delete}"
                                    Padding="8,4" />
                        </StackPanel>
                    </Grid>

                    <!-- Node Information -->
                    <Border Background="{StaticResource BorderBrush}"
                            CornerRadius="12"
                            Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- <Image Width="20" Height="16"  -->
                                <!--        Source="/Resources/Images/nodes.png"  -->
                                <!--        Margin="0,0,8,0"/> -->
                                <TextBlock Style="{StaticResource IconText}"
                                           Text="&#xe600;"
                                           Margin="0,0,8,0" />
                                <TextBlock Text="{loc:Lang Node}"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding NodeCount}"
                                           VerticalAlignment="Center"
                                           d:Text="5"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           FontFamily="Consolas"
                                           Margin="0,0,8,0" />
                                <Button
                                    hc:IconElement.Geometry="{StaticResource RightGeometry}"
                                    Style="{StaticResource ButtonIcon.Small}"
                                    Command="{Binding EditNodesCommand}"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    ToolTip="{loc:Lang Edit}"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>