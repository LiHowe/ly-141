<UserControl x:Class="UI.Controls.TimeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Controls"
             xmlns:vm="clr-namespace:UI.ViewModels"
             xmlns:core="clr-namespace:Core.Converters;assembly=Core"
             xmlns:loc="clr-namespace:Core.Localization;assembly=Core"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <core:StringEqualsConverter x:Key="StringEqualsConverter"/>
        <core:SelectedEqualsItemConverter x:Key="SelectedEqualsItemConverter"/>
        <core:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <!-- 时间选择区 -->
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="200" Margin="0,0,10,0">
                <TextBlock Text="{loc:Lang StartTime}" Margin="0,0,0,5"/>
                <hc:DateTimePicker SelectedDateTime="{Binding StartTime, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                   IsEnabled="{Binding SelectedQuickOption, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringEqualsConverter}, ConverterParameter=自定义}" />
            </StackPanel>
            <StackPanel Width="200" Margin="0,0,10,0">
                <TextBlock Text="{loc:Lang EndTime}" Margin="0,0,0,5"/>
                <hc:DateTimePicker SelectedDateTime="{Binding EndTime, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                   IsEnabled="{Binding SelectedQuickOption, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringEqualsConverter}, ConverterParameter=自定义}" />
            </StackPanel>
        </StackPanel>

        <!-- 快捷选择区 -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0"
                    Visibility="{Binding QuickSelectEnabled, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{loc:Lang QuickSelect}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ItemsControl ItemsSource="{Binding QuickOptions, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding}" GroupName="QuickSelectGroup" Margin="5,0"
                                     Checked="QuickOptionRadio_Checked">
                            <RadioButton.IsChecked>
                                <!-- MultiBinding 只做显示：SelectedQuickOption == 当前项 -->
                                <MultiBinding Converter="{StaticResource SelectedEqualsItemConverter}" Mode="OneWay">
                                    <Binding Path="SelectedQuickOption" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                    <Binding />
                                    <!-- 当前项 (Path=.) -->
                                </MultiBinding>
                            </RadioButton.IsChecked>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </StackPanel>
</UserControl>
