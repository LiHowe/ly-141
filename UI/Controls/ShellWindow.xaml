<Window x:Class="UI.Controls.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="1000" Height="700">
    <Border Background="{StaticResource BackgroundCardBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="{StaticResource ShadowColor}"
                              BlurRadius="15"
                              ShadowDepth="5"
                              Opacity="0.3" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- 标题栏 -->
            <Border Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0"
                    x:Name="TitleBar"
                    Background="{StaticResource TitleBarBrush}"
                    CornerRadius="8,8,0,0"
                    Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <TextBlock x:Name="IconTextBlock"
                               Grid.Column="0"
                               Text="&#xe657;"
                               FontFamily="{StaticResource Icon}"
                               Foreground="{StaticResource TextOnPrimaryBrush}"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />

                    <!-- 标题 -->
                    <TextBlock x:Name="TitleTextBlock"
                               Grid.Column="1"
                               Text="系统设置"
                               Foreground="{StaticResource TextOnPrimaryBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />

                    <!-- 关闭按钮 -->
                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                            Style="{StaticResource CloseButtonStyle}"
                            hc:BackgroundSwitchElement.MouseHoverBackground="Red"
                            Width="30" Height="30"
                            Foreground="{StaticResource TextOnPrimaryBrush}"
                            Click="CloseButton_Click" />
                </Grid>
            </Border>
            <!-- 内容区域 -->
            <ContentControl Grid.Row="1" x:Name="ContentControl" />
        </Grid>
    </Border>
</Window>