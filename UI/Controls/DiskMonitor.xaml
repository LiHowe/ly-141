<UserControl x:Class="UI.Controls.DiskMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:UI.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance controls:DiskMonitorViewModel}"
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="&#xe671;"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontFamily="{StaticResource Icon}"
                       FontSize="18"
                       Margin="0,0,5,0" />
            <TextBlock Text="{Binding DiskName}"
                        Foreground="{StaticResource PrimaryTextBrush}"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
            <TextBlock Text="{Binding DiskUsageText}"  Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>