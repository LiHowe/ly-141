<UserControl x:Class="UI.Controls.S7PlcEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewModels="clr-namespace:UI.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:S7PlcEditViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="10">
            <!-- 第一行 -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Key:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                <TextBox Text="{Binding Key}" Grid.Column="1" />
            </Grid>

            <!-- 第二行 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="名称:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                <TextBox Text="{Binding Title}" Grid.Column="1" />
            </Grid>

            <!-- 第三行 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="IP:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                <TextBox Text="{Binding Ip}" Grid.Column="1" />
                <Button Grid.Column="2" Margin="0" Command="{Binding PingCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <!-- 加载动画 -->
                            <hc:LoadingCircle Width="12" Height="12" Margin="0,0,5,0"
                                              DotDiameter="2"
                                              Visibility="{Binding IsTestingConnection, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <!-- 按钮文本 -->
                            <TextBlock Text="Ping" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- 第四行 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="型号:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                <ComboBox ItemsSource="{Binding AvailableTypes}" SelectedItem="{Binding Type}" MinWidth="200"
                          Grid.Column="1" />
            </Grid>
            <Grid HorizontalAlignment="Stretch" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="机架:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                    <hc:NumericUpDown Value="{Binding Rack}" Grid.Column="1" VerticalAlignment="Center" />
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="插槽:" VerticalAlignment="Center" Margin="5,0" Grid.Column="0" />
                    <hc:NumericUpDown Value="{Binding Slot}" Grid.Column="1" VerticalAlignment="Center" />
                </Grid>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xe623;" FontFamily="{StaticResource Icon}" Margin="0,0,5,0" />
                    <TextBlock Text="{Binding StatusText}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- 测试连接按钮 -->
                    <Button Command="{Binding TestConnectionCommand}" Margin="5,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <!-- 加载动画 -->
                                <hc:LoadingCircle Width="14" Height="14" Margin="0,0,5,0"
                                                  DotDiameter="2"
                                                  Visibility="{Binding IsTestingConnection, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <!-- 按钮文本 -->
                                <TextBlock Text="测试连接" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- 保存按钮 -->
                    <Button Style="{StaticResource ButtonPrimary}" Command="{Binding SaveCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <!-- 加载动画 -->
                                <hc:LoadingCircle Width="14" Height="14" Margin="0,0,5,0"
                                                  DotDiameter="2"
                                                  Style="{StaticResource LoadingCircleLight}"
                                                  Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <!-- 按钮文本 -->
                                <TextBlock Text="保存" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>