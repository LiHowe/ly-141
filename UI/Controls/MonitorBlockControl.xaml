<controls:BizControlBase x:Class="UI.Controls.MonitorBlockControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:hc="https://handyorg.github.io/handycontrol"
                xmlns:viewModels="clr-namespace:UI.ViewModels"
                xmlns:controls="clr-namespace:UI.Controls"
                d:DataContext="{d:DesignInstance viewModels:MonitorBlockViewModel}"
                mc:Ignorable="d"
                d:DesignHeight="600" d:DesignWidth="550">
    <UserControl.Resources>
        <!-- 状态指示器样式 -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="8">
        <hc:Card Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- 头部：状态指示器、标题、VIN码 -->
                    <RowDefinition Height="40" />
                    <!-- 中部：参数展示区域 -->
                    <RowDefinition Height="Auto" />
                    <!-- 底部：图表展示区域 -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 头部区域 -->
                <Border Grid.Row="0"
                        BorderThickness="0,0,0, 2"
                        BorderBrush="{StaticResource BorderBrush}"
                        Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 状态指示器 -->
                        <Ellipse Grid.Column="0"
                                 Style="{StaticResource StatusIndicatorStyle}"
                                 Fill="{Binding StatusBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,12,0" />

                        <!-- 标题 -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Title}"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   VerticalAlignment="Center" />

                        <!-- VIN码 -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            
                            <TextBlock Text="{Binding Vin}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 中部：参数展示区域 -->
                <Border Grid.Row="1"
                        Margin="0,8,0,4">
                    <ItemsControl ItemsSource="{Binding DisplayItems}"
                                  Margin="8">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:DisplayControl
                                    DataContext="{Binding}"
                                    Margin="4"
                                    Width="150"
                                    Height="80" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- 底部：图表展示区域 -->
                <Border Grid.Row="2"
                        Margin="0,4,0,0">
                    <ItemsControl ItemsSource="{Binding PlotItems}"
                                  Margin="8">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding ChartColumns}"
                                             Rows="{Binding ChartRows}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:PlotControl ViewModel="{Binding }" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

            </Grid>
        </hc:Card>
    </Grid>
</controls:BizControlBase>