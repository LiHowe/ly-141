<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime"
                    xmlns:controls="clr-namespace:UI.Controls">

    <!-- ========================================
         WinmTech-Scada 工业数据采集系统 - HandyControl集成主题资源字典
         整合HandyControl和自定义样式定义
         ======================================== -->

    <ResourceDictionary.MergedDictionaries>
        <!-- HandyControl主题集成 -->
        <ResourceDictionary Source="HandyControlTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="Icon">
        /Resources/Fonts/#winm
    </FontFamily>

    <Style TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="MiSans" />
    </Style>

    <!-- 关闭按钮样式 -->
    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonIcon}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E81123" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#F1707A" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================
         DisplayControl 样式定义
         ======================================== -->
    <!-- 定义字体大小资源，便于主题切换 -->
    <system:Double x:Key="MainLabelFontSize">12</system:Double>
    <system:Double x:Key="SubLabelFontSize">10</system:Double>
    <system:Double x:Key="ValueFontSize">18</system:Double>
    <system:Double x:Key="UnitFontSize">12</system:Double>
    <!-- DisplayControl 的样式 -->
    <Style TargetType="{x:Type controls:DisplayControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DisplayControl}">
                    <Border Background="{StaticResource BackgroundCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 主标签 -->
                            <TextBlock Grid.Row="0"
                                       Text="{Binding Label, FallbackValue=主标签}"
                                       FontWeight="Medium"
                                       FontSize="{StaticResource MainLabelFontSize}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Left"
                                       AutomationProperties.Name="主标签" />

                            <!-- 副标签 -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding SubLabel, FallbackValue=SubTitle}"
                                       FontSize="{StaticResource SubLabelFontSize}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Left"
                                       Margin="0,2,0,8"
                                       AutomationProperties.Name="副标签" />

                            <!-- 数值和单位 -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding Value, StringFormat={}{0:F2}, FallbackValue=0.00}"
                                           FontSize="{StaticResource ValueFontSize}"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           AutomationProperties.Name="数值" />
                                <TextBlock Text="{Binding Unit, FallbackValue=单位}"
                                           FontSize="{StaticResource UnitFontSize}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="4,0,0,0"
                                           VerticalAlignment="Bottom"
                                           AutomationProperties.Name="单位" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ========================================
         全局默认样式 - Global Default Styles (HandyControl兼容)
         ======================================== -->

    <!-- 默认窗口样式 -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Misans, Microsoft YaHei UI, Segoe UI, Arial" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- 默认用户控件样式 -->
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Misans, Microsoft YaHei UI, Segoe UI, Arial" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- 默认页面样式 -->
    <Style TargetType="Page">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Misans, Microsoft YaHei UI, Segoe UI, Arial" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ========================================
         工业SCADA专用样式 - Industrial SCADA Specific Styles (HandyControl增强)
         ======================================== -->

    <!-- 设备状态面板样式 - 使用HandyControl增强 -->
    <Style x:Key="DeviceStatusPanelStyle" TargetType="Border" BasedOn="{StaticResource WinmDeviceStatusPanel}">
        <!-- 继承HandyControl增强样式 -->
    </Style>

    <!-- 数据显示面板样式 -->
    <Style x:Key="DataDisplayPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- 报警面板样式 - 使用HandyControl增强 -->
    <Style x:Key="AlarmPanelStyle" TargetType="Border" BasedOn="{StaticResource WinmAlarmPanel}">
        <!-- 继承HandyControl增强样式 -->
    </Style>

    <!-- 数值显示样式 - 使用HandyControl增强 -->
    <Style x:Key="ValueDisplayStyle" TargetType="TextBlock" BasedOn="{StaticResource WinmValueDisplay}">
        <!-- 继承HandyControl增强样式 -->
    </Style>

    <!-- 单位显示样式 - 使用HandyControl增强 -->
    <Style x:Key="UnitDisplayStyle" TargetType="TextBlock" BasedOn="{StaticResource WinmUnitDisplay}">
        <!-- 继承HandyControl增强样式 -->
    </Style>

    <!-- 设备名称样式 -->
    <Style x:Key="DeviceNameStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- ========================================
         模块导航样式 - Module Navigation Styles
         ======================================== -->

    <!-- 模块菜单按钮样式 -->
    <Style x:Key="ModuleMenuButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- 侧边栏导航按钮样式 -->
    <Style x:Key="SidebarNavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- ========================================
         表单样式 - Form Styles
         ======================================== -->

    <!-- 表单容器样式 -->
    <Style x:Key="FormContainerStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="16" />
        <Setter Property="Background" Value="White" />
    </Style>

    <!-- 表单字段样式 -->
    <Style x:Key="FormFieldStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <!-- 表单标签样式 -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,4" />
        <Setter Property="Padding" Value="0" />
    </Style>

</ResourceDictionary>